<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jjj.crm_system">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:name=".app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="客户管理系统"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CustomerActivity"
            android:label="@string/title_activity_customer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MerchantloginActivity"
            android:label="@string/title_activity_merchantlogin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.CustomerloginActivity"
            android:label="@string/title_activity_customerlogin"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jjj.crm_system.activity.MainActivity" />
        </activity>
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activity.MerchantActivity"
            android:label="@string/title_activity_merchant"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MerchintInfoActivity"
            android:label="MerchintInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.GoodsInfoActivity"
            android:label="GoodsInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.OnsaleInfoActivity"
            android:label="OnsaleInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AddOnsaleActivity"
            android:label="OnsaleInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AddGoodsActivity"
            android:label="AddGoodsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.GoodsEditActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MemberInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AddMemberActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.MemberDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>