<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/iv_pic_goodsitem"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/tv_name_goodsitem"
        android:text="商品名"
        android:layout_toRightOf="@id/iv_pic_goodsitem"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格"
        android:textSize="24dp"
        android:id="@+id/tv_price_goodsitem"
        android:layout_below="@id/tv_name_goodsitem"
        android:layout_toRightOf="@id/iv_pic_goodsitem"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:id="@+id/tv_details_goodsitem"
        android:textSize="24dp"
        android:text="商品备注"
        android:layout_alignBottom="@id/iv_pic_goodsitem"
        android:gravity="top"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/iv_pic_goodsitem"
        android:layout_below="@id/tv_price_goodsitem"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:id="@+id/iv_goodsedit_goodsitem"
        android:layout_marginRight="10dp"
        android:src="@mipmap/right_arrow"/>

</RelativeLayout>