<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_id_memberitem"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:textSize="24dp"
        android:text="1"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/tv_name_memberitem"
        android:text="李先生"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_id_memberitem"

        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_phonenum_memberitem"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/tv_name_memberitem"
        android:textSize="24dp"
        android:text="13998376373"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/tv_account_memberitem"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="6378"
        android:textSize="24dp"/>

</RelativeLayout>