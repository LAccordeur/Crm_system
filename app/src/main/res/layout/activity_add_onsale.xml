<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:id="@+id/rl_top_addonsale"
                android:background="#66CC66"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:id="@+id/iv_back_addonsale"
                    android:src="@mipmap/back_arrow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="24dp"
                    android:textColor="#ffffff"
                    android:text="活动编辑管理"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动名称:"
                android:layout_marginLeft="15dp"
                android:textSize="24dp"
                android:layout_below="@id/rl_top_addonsale"
                android:layout_marginTop="20dp"
                android:id="@+id/tv_name"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/et_onsalename_addonsale"
                android:layout_toRightOf="@id/tv_name"
                android:layout_alignTop="@id/tv_name"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_edittext"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_below="@id/tv_name"
                android:src="@mipmap/ic_launcher"
                android:background="@drawable/shape_edittext"
                android:id="@+id/iv_pic_addonsale"
                android:layout_margin="15dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_pic_addonsale"
                android:layout_toRightOf="@id/iv_pic_addonsale"
                android:text="上传图片"
                android:background="@drawable/shape_button"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="活动介绍"
                android:id="@+id/tv_text_addonsale"
                android:layout_below="@id/iv_pic_addonsale"
                android:layout_margin="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:minLines="3"
                android:gravity="top"
                android:layout_margin="15dp"
                android:background="@drawable/shape_edittext"
                android:id="@+id/et_onsaledetail_addonsale"
                android:layout_below="@id/tv_text_addonsale"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间:"
                android:layout_marginLeft="15dp"
                android:textSize="24dp"
                android:layout_below="@id/et_onsaledetail_addonsale"
                android:layout_marginTop="20dp"
                android:id="@+id/tv_starttime_addonsale"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/et_starttime_addonsale"
                android:layout_toRightOf="@id/tv_name"
                android:layout_alignTop="@id/tv_starttime_addonsale"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_edittext"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束时间:"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/tv_starttime_addonsale"
                android:layout_marginTop="5dp"
                android:textSize="24dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_endtime_addonsale"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_edittext"
                android:layout_below="@id/et_starttime_addonsale"
                android:layout_marginRight="15dp"
                android:layout_alignLeft="@id/et_starttime_addonsale"
                android:textSize="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_button"
                android:layout_below="@id/et_endtime_addonsale"
                android:layout_centerHorizontal="true"
                android:text="点击发布"
                android:layout_margin="10dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
