<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:id="@+id/rl_top_goodsinfo"
        android:background="#66CC66"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:id="@+id/iv_back_goodsinfo"
            android:src="@mipmap/back_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="24dp"
            android:textColor="#ffffff"
            android:text="商品浏览"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="35dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@drawable/selector_tab_text_merchant"
            android:cursorVisible="false"
            android:clickable="true"
            android:layout_marginRight="15dp"
            android:id="@+id/iv_add_goodsinfo"/>

    </RelativeLayout>
    <com.example.jjj.crm_system.ui.pulltorefresh.PullToRefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top_goodsinfo"
        android:id="@+id/ptr_goods_goodsinfo"></com.example.jjj.crm_system.ui.pulltorefresh.PullToRefreshListView>
</RelativeLayout>
