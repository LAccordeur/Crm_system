<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_accountinfo_coustomerindividual"
    android:orientation="vertical"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <com.example.jjj.crm_system.ui.view.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/portrait"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/iv_portrait_customerindividual"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名："
            android:layout_toLeftOf="@+id/et_name_coustomerindividual"
            android:textSize="24dp"
            android:layout_centerInParent="true"
            android:id="@+id/tv_name_customerindividual"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_name_coustomerindividual"
            android:layout_centerInParent="true"
            android:textSize="24dp"

            android:text="小智"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总积分："
            android:textSize="24dp"
            android:layout_centerInParent="true"
            android:id="@+id/tv_totlalaccount_coustomerindividual"
            android:layout_below="@id/tv_name_customerindividual"
            android:layout_alignRight="@id/tv_name_customerindividual"/>
        <TextView
            android:layout_width="wrap_content"

            android:textSize="24dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_totalaccount_coustomerindividual"
            android:text="9562"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/tv_totlalaccount_coustomerindividual"
            android:layout_below="@id/et_name_coustomerindividual"
            android:layout_alignLeft="@id/et_name_coustomerindividual"
            />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分消费明细："/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_edittext"
                android:id="@+id/lv_accountinfo_coustomerindividual"></ListView>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>