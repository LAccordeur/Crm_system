<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:id="@+id/rl_top_addmember"
        android:background="#66CC66"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:id="@+id/iv_back_addmember"
            android:src="@mipmap/back_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="24dp"
            android:textColor="#ffffff"
            android:text="添加会员"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会员姓名："
        android:textSize="24dp"
        android:layout_below="@id/rl_top_addmember"
        android:layout_margin="10dp"
        android:id="@+id/tv_name_addmember"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/et_name_addmember"
        android:background="@drawable/shape_edittext"
        android:layout_toRightOf="@id/tv_name_addmember"
        android:layout_alignTop="@id/tv_name_addmember"
        android:layout_marginRight="10dp"
        android:singleLine="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号："
        android:textSize="24dp"
        android:layout_below="@id/tv_name_addmember"
        android:id="@+id/tv_phonenum_addmember"
        android:layout_margin="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_edittext"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:id="@+id/et_phonenum_addmember"
        android:phoneNumber="true"
        android:layout_toRightOf="@id/tv_name_addmember"
        android:layout_alignTop="@id/tv_phonenum_addmember"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="备注："
        android:layout_below="@id/tv_phonenum_addmember"
        android:layout_margin="10dp"
        android:id="@+id/tv_note_addmember"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/et_details_addmember"
        android:gravity="top"
        android:minLines="3"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_edittext"
        android:layout_toRightOf="@id/tv_name_addmember"
        android:layout_alignTop="@id/tv_note_addmember"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_button"
        android:text="确定"
        android:textSize="24dp"
        android:id="@+id/bt_ok_addmember"
        android:layout_below="@id/tv_note_addmember"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>


</RelativeLayout>
