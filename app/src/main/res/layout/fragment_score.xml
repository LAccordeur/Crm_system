<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
   <TableRow
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           android:layout_height="wrap_content"
           android:text="会员手机号:"
           android:layout_marginLeft="10dp"
           android:textSize="25dp"
           android:layout_marginTop="20dp"/>
       <EditText
           android:id="@+id/phonenumber"
           android:layout_height="wrap_content"
           android:hint="支持后四位"
           android:layout_marginTop="20dp"
           android:textSize="25dp"/>
   </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_height="wrap_content"
            android:text="消费金额:"
            android:layout_marginLeft="33dp"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/RecordMoney"
            android:layout_height="wrap_content"
            android:hint="输入消费金额"
            android:textSize="25dp"
            />
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_height="wrap_content"
            android:text="本次积分:"
            android:layout_marginLeft="33dp"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/BonusPoint"
            android:layout_height="wrap_content"
            android:hint="输入本次积分"
            android:textSize="25dp"
            />
    </TableRow>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="已选商品"
    android:textSize="25dp"
    android:id="@+id/activity_chooser_view_content"
    />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:layout_below="@+id/activity_chooser_view_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/activity_chooser_view_content"
            android:text="添加>"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:textSize="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/table_shape"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/goods_list">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品一"
            android:id="@+id/goods1"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/goods1"
            android:text="单价"
            android:textSize="20dp"
            android:layout_marginLeft="170dp"
            android:id="@+id/price"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*1"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/price"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总价:"
        android:textSize="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/price1"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/price1"
            android:text="25.00"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="200dp"
            />
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>