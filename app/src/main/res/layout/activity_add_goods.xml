<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:id="@+id/rl_top_addgoods"
        android:background="#66CC66"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:id="@+id/iv_back_addgoods"
            android:src="@mipmap/back_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="24dp"
            android:textColor="#ffffff"
            android:text="添加商品"/>


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:layout_below="@id/rl_top_addgoods"
        android:background="@drawable/shape_edittext"
        android:id="@+id/iv_pic_addgoods"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:text="上传图片"
        android:layout_marginTop="5dp"
        android:id="@+id/bt_uploadpic_addgoods"
        android:layout_below="@id/iv_pic_addgoods"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="商品名:"
        android:id="@+id/tv_name_addgoods"
        android:layout_below="@id/bt_uploadpic_addgoods"
        android:layout_margin="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_toRightOf="@id/tv_name_addgoods"
        android:layout_below="@id/bt_uploadpic_addgoods"
        android:background="@drawable/shape_edittext"
        android:id="@+id/et_name_addgoods"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格："
        android:textSize="24dp"
        android:layout_below="@id/tv_name_addgoods"
        android:layout_margin="15dp"
        android:id="@+id/tv_price_addgoods"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/et_price_addgoods"

        android:background="@drawable/shape_edittext"
        android:layout_toRightOf="@id/tv_name_addgoods"
        android:layout_below="@id/et_name_addgoods"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@id/tv_price_addgoods"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/tv_details_addgoods"
        android:text="备注："
        android:layout_below="@id/tv_price_addgoods"
        android:layout_margin="15dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/et_details_addgoods"
        android:layout_toRightOf="@id/tv_details_addgoods"
        android:background="@drawable/shape_edittext"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@id/tv_details_addgoods"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/bt_ok_addgoods"
        android:layout_below="@id/tv_details_addgoods"
        android:background="@drawable/shape_button"
        android:text="确定"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


</RelativeLayout>
